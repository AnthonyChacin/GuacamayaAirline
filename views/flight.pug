extends base
block content
  .container.pt-4
    h2.text-center Vuelos
    .row.mt-5
      .col-12
        table.table.bg-white
          thead.text-center
            tr.tr.bg-dark.text-white
              //th(scope='col') ID
              th(scope='col') Código de vuelo
              th(scope='col') Precio Base ($)
              th(scope='col') % Ausencia
              th(scope='col') Estatus
              th(scope='col') Origen
              th(scope='col') Destino
              th(scope='col') Avión 
              th(scope='col')
              th(scope='col')
          tbody
          - for (var i = 0; i < flights.length; i++)
            tr.text-center
              th(scope='row') #{flights[i].id}
              td $#{flights[i].precioBase}
              td #{flights[i].porcentajeAus} %
              td #{flights[i].estatus}
              td #{airports[flights[i].origen - 1].ciudad}, #{airports[flights[i].origen - 1].pais}
              td #{airports[flights[i].destino - 1].ciudad}, #{airports[flights[i].destino - 1].pais}
              td #{flights[i].idAirplane}
              td
                form(action=`show/${flights[i].id}`,method="POST")
                  button.btn.btn-outline-dark(type='submit') Modificar
              td
                form(action=`delete/${flights[i].id}`,method="POST")
                  button.btn.btn-outline-danger(type='submit') Eliminar
        h4.mt-5 Registrar Vuelo
        div.card.bg-dark
          div.card-body.text-white
            form(action='create/' method="POST")
              .form-group
                label(for='precioBase') Precio Base ($)
                .input-group-mb-3
                    .input-group-prepend
                        span.input-group-text $
                        input#precioBase.form-control(type='number' step='any' min="0.00" aria-describedby='precioBase' placeholder='0.00' name='precioBase')
              .form-group
                label(for='estatus') Seleccione Estatus
                select#estatus.form-control(type='select' placeholder='Estatus' name='estatus').custom-select
                    option(value="Programado" selected) Programado
                    option(value="Cancelado") Cancelado
                    option(value="Volando") Volando
                    option(value="Retrasado") Retrasado
                    option(value="Aterrizo") Aterrizó
              .form-group
                label(for='origen') Origen
                select#origen.form-control(type='select' placeholder='Origen' name='origen').custom-select
                    option(value="") ...
                    - for (var i = 0; i < airports.length; i++)
                      option(value=`${airports[i].id}`) #{airports[i].id}-#{airports[i].ciudad}
              .form-group
                label(for='destino') Destino
                select#destino.form-control(type='select' placeholder='Destino' name='destino').custom-select
                    option(value="") ...
                    - for (var i = 0; i < airports.length; i++)
                      option(value=`${airports[i].id}`) #{airports[i].id}-#{airports[i].ciudad}
              .form-group
                label(for='idAirplane') Avión
                input#idAirplane.form-control(type='number' placeholder='Avión' name='idAirplane')  
              button.btn.btn-danger(type='submit') Registrar